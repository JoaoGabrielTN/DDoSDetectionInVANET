@Article{Shahwani2022,
  author   = {Hamayoun Shahwani and Syed {Attique Shah} and Muhammad Ashraf and Muhammad Akram and Jaehoon (Paul) Jeong and Jitae Shin},
  journal  = {Vehicular Communications},
