@Article{Chithaluru2024,
  author   = {Premkumar Chithaluru and Fadi Al-Turjman and Raman Dugyala and Thompson Stephan and Manoj Kumar and Jagjit Singh Dhatterwal},
  journal  = {Future Generation Computer Systems},
  title    = {An enhanced consortium blockchain diversity mining technique for IoT metadata aggregation},
