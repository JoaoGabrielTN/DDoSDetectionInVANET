}

@InProceedings{Biasi2018,
  author    = {de Biasi, Gabriel and Vieira, Luiz F. M. and Loureiro, Antonio A. F.},
  booktitle = {2018 IEEE International Conference on Communications (ICC)},
  title     = {Sentinel: Defense Mechanism against DDoS Flooding Attack in Software Defined Vehicular Network},
